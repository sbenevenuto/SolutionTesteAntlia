@model IEnumerable<Model.Product.Product>

@{
    ViewData["Title"] = "Index";
}

<h2>Listagem</h2>

<p>
    <a asp-action="Create">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifieldDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifieldDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductId">Editar</a> |                
                <a asp-action="Delete" asp-route-id="@item.ProductId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
